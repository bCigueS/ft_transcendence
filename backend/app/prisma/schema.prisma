generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:123@localhost:5432/postgres?schema=public"
}

model User {
  id        Int          @id @default(autoincrement())

  email     String
  name      String       @unique
  password  String
  avatar    String?       @default("default.jpg")
  
  friends   Friendship[]  @relation(name: "friends")
  followers Friendship[]  @relation(name: "followers")

  blocked   Block[]  @relation(name: "blocked")
  haters    Block[]  @relation(name: "haters")

  games         UserGame[]
  winnerGames   Game[]    @relation("WinnerGames")
  
  @@map("users")
}

model Friendship {
  id        Int  @id @default(autoincrement())

  MyId      Int
  friendId  Int
  friends   User @relation(name: "friends", fields: [friendId], references: [id])
  followers User @relation(name: "followers", fields: [MyId], references: [id])
 
  @@map("friends")
}

model Block {
  id        Int  @id @default(autoincrement())

  MyId      Int
  blockedId Int
  blocked   User @relation(name: "blocked", fields: [blockedId], references: [id])
  haters     User @relation(name: "haters", fields: [MyId], references: [id])
 
  @@map("blocked")
}

model Game {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())

  type          GameType
  level         Int
  state         GameState

  players       UserGame[]

  winnerId      Int?
  winner        User?     @relation("WinnerGames", fields: [winnerId], references: [id])

  scorePlayer1  Int       @default(0)
  scorePlayer2  Int       @default(0)

  duration      Int

  @@map("games")
}

enum GameType {
  PLAYER
  COMPUTER
}

enum GameState {
  PENDING
  PLAYING
  FINISHED
}

model UserGame {
  createdAt     DateTime @default(now())

  user          User   @relation(fields: [userId], references: [id])
  userId        Int

  game          Game   @relation(fields: [gameId], references: [id])
  gameId        Int

  playerIndex   Int    @default(1)

  @@id([userId, gameId])
}